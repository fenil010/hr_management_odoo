// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////

enum Role {
  ADMIN
  EMPLOYEE
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  HALF_DAY
  LEAVE
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum LeaveType {
  PAID
  SICK
  UNPAID
}

//////////////////////////////////////////////////
// USER (AUTH + BASIC INFO)
//////////////////////////////////////////////////

model User {
  id                  String      @id @default(uuid())
  email               String      @unique
  password            String
  role                Role        @default(EMPLOYEE)
  isActive            Boolean     @default(true)
  emailVerified       Boolean     @default(false)
  verificationToken   String?
  verificationTokenExpiry DateTime?

  employee            Employee?
  sessions            Session[]

  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
}

//////////////////////////////////////////////////
// EMPLOYEE PROFILE
//////////////////////////////////////////////////

model Employee {
  id              String     @id @default(uuid())
  userId          String     @unique
  employeeCode    String     @unique
  fullName        String
  phone           String?
  address         String?
  designation     String
  department      String
  joiningDate     DateTime
  profileImage    String?

  user            User       @relation(fields: [userId], references: [id])
  attendance      Attendance[]
  leaves          LeaveRequest[]
  payroll         Payroll?

  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  @@index([userId])
  @@index([department])
  @@index([designation])
}

//////////////////////////////////////////////////
// ATTENDANCE
//////////////////////////////////////////////////

model Attendance {
  id          String             @id @default(uuid())
  employeeId  String
  date        DateTime
  status      AttendanceStatus
  checkIn     DateTime?
  checkOut    DateTime?

  employee    Employee           @relation(fields: [employeeId], references: [id])

  createdAt   DateTime           @default(now())

  @@unique([employeeId, date])
  @@index([employeeId])
  @@index([date])
  @@index([status])
}

//////////////////////////////////////////////////
// LEAVE MANAGEMENT
//////////////////////////////////////////////////

model LeaveRequest {
  id            String       @id @default(uuid())
  employeeId    String
  type          LeaveType
  startDate     DateTime
  endDate       DateTime
  days          Int
  reason        String?
  status        LeaveStatus  @default(PENDING)

  approvedBy    String?
  approvedAt    DateTime?
  adminComment  String?

  employee      Employee    @relation(fields: [employeeId], references: [id])

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([employeeId])
  @@index([status])
  @@index([createdAt])
}

//////////////////////////////////////////////////
// PAYROLL
//////////////////////////////////////////////////

model Payroll {
  id            String     @id @default(uuid())
  employeeId    String     @unique

  basicSalary   Float
  hra           Float
  allowances    Float
  deductions    Float
  netSalary     Float


  @@index([employeeId])
  employee      Employee  @relation(fields: [employeeId], references: [id])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

//////////////////////////////////////////////////
// AUTH SESSIONS (NextAuth compatible)
//////////////////////////////////////////////////

model Session {
  sessionToken String   @id
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id])
}
